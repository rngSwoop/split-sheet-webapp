generator client {
  provider = "prisma-client-js"
  engineType = "client"  // Enables the new Prisma 7 engine
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?  @unique
  role      Role     @default(ARTIST)
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft Delete & Compliance Fields
  deletedAt             DateTime?    @map("deleted_at")           
  anonymizedName         String?      @map("anonymized_name")     
  deletedReason         String?      @map("deleted_reason")        
  lastActiveAt          DateTime?     @map("last_active_at")       // For inactivity tracking
  dataRetentionUntil     DateTime?     @map("data_retention_until")  
  deletionRequestOrigin   String?      @map("deletion_request_origin") // "USER_REQUEST" | "ADMIN_ACTION" | "INACTIVITY"

  // Relations
  profiles      Profile[]
  contributors  Contributor[]
  signatures    Signature[]  // Added: Users can sign split sheets
  deletionJobs  DeletionJob[]  // Added: Track deletion jobs for this user
  notifications Notification[]
}

enum Role {
  ARTIST
  LABEL
  ADMIN
  DELETED
}

enum NotificationType {
  SPLIT_INVITE
  SPLIT_UPDATED
  GENERAL
}

// Deletion job status tracking
enum DeletionStatus {
  PENDING
  IN_PROGRESS
  RETRYING
  COMPLETED
  FAILED
  NEEDS_MANUAL_REVIEW
  CANCELLED
}

// Individual step status tracking
enum StepStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  SKIPPED
}

model Profile {
  id     String @id @default(uuid())
  userId String @unique
  name   String?
  bio    String?
  avatar String?
  role   Role? @default(ARTIST)  // Optional, but defaults to ARTIST
  labelId String?

  // Soft delete field to mirror user deletion state
  deletedAt DateTime? @map("deleted_at")  // Mirror user deletion state

  label  Label? @relation(fields: [labelId], references: [id])

  user   User   @relation(fields: [userId], references: [id])
}

model Song {
  id           String   @id @default(uuid())
  workingTitle String?  // Added: Working title for early stages
  finalTitle   String   // Added: Final title; required
  iswc         String?  // International Standard Work Code
  creationDate DateTime? // Added: Date of song creation
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  splitSheets  SplitSheet[]
}

model SplitSheet {
  id                 String   @id @default(uuid())
  songId             String
  createdBy          String?
  version            Int      @default(1)  // Added: Version tracking for revisions
  agreementDate      DateTime?  // Added: Date of the agreement
  status             Status   @default(DRAFT)
  totalPercentage    Float    @default(0)  // App logic should enforce == 100
  clauses            String?  // Added: Text field for additional clauses/waivers
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  publishedAt        DateTime?
  reversedAt         DateTime?  // Added: Timestamp for reversals
  reversalReason     String?    // Added: Required for legal audit of reversals

  song               Song       @relation(fields: [songId], references: [id])
  contributors       Contributor[]
  signatures         Signature[]  // Added: E-signatures for binding agreement
  auditLogs          AuditLog[]
  notifications      Notification[]
}

model Label {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  profiles  Profile[]
}

enum Status {
  DRAFT
  PENDING
  SIGNED
  PUBLISHED
  REVERSED
}

model Contributor {
  id              String   @id @default(uuid())
  splitSheetId String?  // Optional - can be unlinked during deletion
  userId          String?  // Optional link to registered user
  legalName       String   // Added: Full legal name (required for binding agreements)
  stageName       String?  // Added: Optional alias/stage name
  role            String   // e.g., "Composer", "Lyricist", "Producer"
  percentage      Float
  proAffiliation  String?  // Added: PRO like ASCAP, BMI, SESAC
  ipiNumber       String?  // Added: IPI/CAE number for PRO registration
  publisher       String?  // Added: Publishing entity (self or company)
  publisherShare  Float?   // Added: Often 50% default, but customizable
  contactEmail    String?  // Added: Contact info for legal notifications
  contactPhone    String?  // Added
  address         String?  // Added: Mailing address for formal agreements

  splitSheet      SplitSheet? @relation(fields: [splitSheetId], references: [id])
  user            User?      @relation(fields: [userId], references: [id])
  signatures      Signature[]  // Added: Contributors sign the sheet
}

model Signature {
  id           String   @id @default(uuid())
  splitSheetId String
  contributorId String?  // Link to Contributor (or User if registered)
  userId       String?  // Optional: If signed by a registered user
  signatureData String?  // Added: E-sign data (e.g., base64 image, hash, or DocuSign ID)
  signedAt     DateTime @default(now())
  ipAddress    String?  // Added: For legal audit/proof of signing
  deviceInfo   String?  // Added: Browser/user-agent for e-sign compliance
  consentText  String?  // Added: Text confirming agreement (for legal binding)

  splitSheet   SplitSheet @relation(fields: [splitSheetId], references: [id])
  contributor  Contributor? @relation(fields: [contributorId], references: [id])
  user         User?       @relation(fields: [userId], references: [id])
}

model AuditLog {
  id           String   @id @default(uuid())
  splitSheetId String?
  action       String   // e.g., "CREATE", "SIGN", "REVERSE", "UPDATE_PERCENTAGE"
  performedBy  String?  // userId or admin name
  reason       String?
  timestamp    DateTime @default(now())
  oldValue     String?  // Added: JSON string of previous state for reversals
  newValue     String?  // Added: JSON string of new state

  splitSheet   SplitSheet? @relation(fields: [splitSheetId], references: [id])
}

model InviteCode {
  id        String   @id @default(uuid())
  code      String   @unique // e.g., "LABEL-2026-XYZ123"
  role      Role     // Which role this code grants
  createdBy String?  // Admin userId who created it
  createdAt DateTime @default(now())
  expiresAt DateTime? // Optional expiration
  usedBy    String?  // UserId who redeemed it
  usedAt    DateTime?

  // Optional: Link to creator if you add admin relations later
}

model Notification {
  id           String           @id @default(uuid())
  userId       String
  type         NotificationType
  title        String
  message      String
  splitSheetId String?
  read         Boolean          @default(false)
  createdAt    DateTime         @default(now())

  user       User        @relation(fields: [userId], references: [id])
  splitSheet SplitSheet? @relation(fields: [splitSheetId], references: [id])

  @@index([userId, read])
  @@index([userId, createdAt])
}

// ðŸ†• Data Retention Policy Configuration
model DataRetentionPolicy {
  id            String   @id @default(uuid())
  dataType      String   // "USER_PERSONAL", "SIGNATURES", "FINANCIAL_LOGS", "SPLIT_SHEETS"
  retentionDays Int      // Days to retain after deletion/last activity
  legalBasis    String   // "CONTRACT_BINDING", "COMPLIANCE", "BUSINESS_RECORD", "FINANCIAL_AUDIT"
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ðŸ”„ Enhanced Deletion Job Tracking Models
model DeletionJob {
  id                     String         @id @default(uuid())
  jobId                  String         @unique  // Your existing job ID format: "job_timestamp_random"
  userId                 String         // User being deleted
  user                   User           @relation(fields: [userId], references: [id])
  status                 DeletionStatus @default(PENDING)
  currentBatch           Int            @default(0)
  totalBatches           Int            @default(1)
  retryCount             Int            @default(0)
  startedAt              DateTime       @default(now())
  completedAt            DateTime?
  failureReason          String?
  estimatedMinutesTotal  Int?           // Based on user's data size
  cancellationRequestedAt DateTime?      // When user requested cancellation
  
  // Relations
  steps                 DeletionJobStep[]
  preservedContributors PreservedContributor[]
  
  // Indexes for performance
  @@index([userId])
  @@index([status])
  @@index([jobId])
  @@index([startedAt])
}

model DeletionJobStep {
  id             String     @id @default(uuid())
  deletionJobId  String
  stepName       String     // "VALIDATE_USER", "DELETE_SIGNATURES", "DELETE_CONTRIBUTORS", etc.
  status         StepStatus @default(PENDING)
  startedAt      DateTime?
  completedAt    DateTime?
  failureReason  String?
  retryCount     Int        @default(0)
  itemsProcessed Int        @default(0)
  totalItems     Int?
  durationMs     Int?       // Step execution time in milliseconds
  
  // Relations
  deletionJob    DeletionJob @relation(fields: [deletionJobId], references: [id])
  
  // Indexes for performance
  @@index([deletionJobId])
  @@index([status])
  @@index([stepName])
}







model PreservedContributor {
  id                    String   @id @default(uuid())
  deletionJobId         String?  // Link to the deletion job that preserved this data
  originalContributorId String   // Original contributor UUID
  originalUserId        String   // User who originally owned this contributor
  originalSplitSheetId  String?  // Track which split sheet this belonged to
  legalName             String   // Full legal name for binding agreements
  stageName             String?  // Optional alias/stage name
  role                  String   // "Composer", "Lyricist", "Producer", etc.
  percentage            Float    // Share percentage
  proAffiliation        String?  // PRO like ASCAP, BMI, SESAC
  ipiNumber             String?  // IPI/CAE number for PRO registration
  publisher             String?  // Publishing entity (self or company)
  publisherShare        Float?   // Often 50% default, but customizable
  contactEmail          String?  // Contact info for legal notifications
  contactPhone          String?  // Phone number for formal agreements
  address               String?  // Mailing address for formal agreements
  
  // Compliance tracking
  preservedAt           DateTime @default(now())
  retentionUntil        DateTime? // Legal compliance tracking (90 days, etc.)
  deletionReason        String?  // "USER_DELETED", "ACCOUNT_TRANSFER", etc.
  legalHold             Boolean  @default(false) // For legal disputes
  
  // Relations
  deletionJob           DeletionJob? @relation(fields: [deletionJobId], references: [id])
  
  // Indexes for performance and compliance queries
  @@index([originalContributorId])
  @@index([originalUserId])
  @@index([preservedAt])
  @@index([deletionJobId])
  @@index([retentionUntil])
  @@index([legalHold])
}